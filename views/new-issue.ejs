<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-exclamation-circle"></i>Report an Issue
      </h1>
      <% include ./partials/messages %> <% let date = new Date(); %>
      <form action="/issues/new" method="POST">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            class="form-control"
            placeholder="Give a title to the issue"
            required
          />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input
            type="text"
            id="description"
            name="description"
            class="form-control"
            placeholder="Describe your issue"
            required
          />
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input
            type="text"
            id="location"
            name="location"
            class="form-control"
            placeholder="Location"
            required
          />
        </div>
        <button type="submit" class="btn btn-info btn-block">
          Submit Issue
        </button>
      </form>
    </div>
  </div>
</div>
<script>
  let date = document.querySelector("#date");
  let time = document.querySelector("#time");
  let date_today = new Date(Date.now());
  date.value = date_today.toISOString().slice(0, 10);
  time.value = date_today.toTimeString().slice(0, 5);
</script>
